{
  "id": "http://json-schema.org/draft-04/schema#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "comment": "Schema for user validation during registration",
  "type": "object",
  "properties": {
    "email": {
      "format": "email"
    },
    "picture": {
      "format": "uri"
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "creator": {
      "type": "boolean"
    },
    "password": {
      "type": "string",
      "minLength": 4,
      "maxLength": 256
    }
  },
  "required": ["email", "password", "firstName", "lastName"],
  "additionalProperties": false
}