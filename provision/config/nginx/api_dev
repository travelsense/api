# API host
server {
    listen 80;
    server_name 172.16.0.101;

    root /vagrant/public;

    # Important for VirtualBox
    sendfile off;

    location / {
        include fastcgi_params;
        fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
        fastcgi_param APP_ENV dev;
        fastcgi_param SCRIPT_FILENAME $document_root/app.php;
        fastcgi_cache off;
    }
}
